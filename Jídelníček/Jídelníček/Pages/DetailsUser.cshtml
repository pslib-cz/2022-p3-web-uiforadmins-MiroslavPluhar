@page
@model Jídelníček.Pages.DetailsUserModel
@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Menus)
        </dt>
        <ul style="list-style-type:none">
            @foreach (var item in Model.Menus)
            {
                    <li><dd class="col-sm-10">@item.Name</dd></li>
            }
        </ul>
    </dl>
</div>
<div>
    <a asp-page="./EditUser" asp-route-id="@Model.User?.UserId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>