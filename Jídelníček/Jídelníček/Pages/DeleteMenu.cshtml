@page
@model Jídelníček.Pages.DeleteMenuModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Menu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Menu.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Menu.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Menu.Foods)
        </dt>
        <ul style="list-style-type:none">
            @foreach (var item in Model.Foods)
            {
                <li><dd class="col-sm-10">@item.Name</dd></li>
            }
        </ul>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Menu.MenuId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Menu" asp-route-id="@Model.UserId">Back to List</a>
    </form>
</div>